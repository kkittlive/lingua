<div class="navbar navbar-expand-sm navbar-light navbar-lewagon scroll">
  <%= link_to "/", class: "navbar-brand" do %>
    <span class="nav-item logo scroll">Lingua</span>
  <% end %>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "Search classes", "/", class: "nav-link scroll" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item dropdown d-flex align-content-center">
          <div class="d-flex align-items-center"><%= image_tag "https://www.tuktukdesign.com/wp-content/uploads/2020/01/profile-icon-vector.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My account", users_dashboard_path, class: "dropdown-item" %>
            <%= link_to "Logout", destroy_user_session_path, class: "dropdown-item", method: :delete %>
          </div>
        </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Log in", "/users/sign_in", class: "nav-link scroll" %>
        </li>
        <li class="nav-item">
          <%= link_to "Sign up", "/users/sign_up", class: "nav-link scroll" %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url('https://images.unsplash.com/photo-1489348611450-4c0d746d949b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1352&q=80');">
  <div class="container">
    <p class="text-center">
      <span id="banner-typed-text"></span>
    </p>

    <div class="search-form-control form-group">
      <%= simple_form_for :search, url: root_path, method: "GET", html: { class: 'form-inline' } do |f| %>
        <%= f.input :language, as: :select, collection: ["Spanish", "English"], prompt: 'Language', label: false, class: " string required" %>
        <%= f.input :location, place: 'Location', label: false, placeholder: "Location", class: "form-control string required location-input" %>
        <%= f.submit "Search", class: "btn btn-white btn-lg btn-search-home" %>
      <% end %>
    </div>
  </div>
</div>

<div class="cards">
  <% @teachers.each do |teacher| %>
    <div class="card-category">
      <div class="icon-container">
        <img class="icon" src="<%= asset_path 'default-avatar.svg' %>">
      </div>
      <div class="name">
        <p><%= teacher.first_name %> <%= teacher.last_name %></p>
      </div>
      <div class="languages">
        <img class="flag" src="<%= teacher.languages.empty? ? asset_path('flags/ca.png') : asset_path(teacher.languages.first.flag) %>">
      </div>
      <div class="qualifications">
        <p><b>Availability:</b> <%= teacher.availability.capitalize %></p>
      </div>
      <div class="location">
        <p><%= teacher.location %></p>
      </div>
      <div class="text-center">
        <%= link_to "Book a lesson", "/users/#{teacher.id}", class: "btn btn-ghost" %>
      </div>
    </div>
    <% end %>
</div>

